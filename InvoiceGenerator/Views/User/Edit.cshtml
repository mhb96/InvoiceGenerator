@model InvoiceGenerator.Common.Models.User.UserModel
@{
    ViewData["Title"] = "Edit";
}

<body class="">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="register-card">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div>
                            <div>
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h3 text-gray-900">Edit Your Details</h1>
                                    </div>
                                    <hr />
                                    <form >
                                        <div class="user" ng-controller="edit" ng-init="init()">
                                            <div>
                                                <h1 class="h5 text-gray-900 text-center">Login Details </h1>
                                                <h6 class="text-center text-gray-900 mt-4">User Name: {{userName}} </h6>
                                                <div class="text-center text-gray-900">Password: <input id="password" value="{{password}}" type="password" disabled/><button style="height: 29px; padding-top: 2px;" class="btn btn-light fas fa-eye ml-2" ng-click="showPassword()"></button></div>
                                            </div>
                                            <hr class="my-4" />
                                            <div>
                                                <h1 class="h5 text-gray-900 text-center mb-4">User Details</h1>
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label class="text-gray-900">First Name</label>
                                                        <input type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="First Name" ng-model="firstName" required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label class="text-gray-900">Last Name</label>
                                                        <input type="text" class="form-control form-control-user" id="exampleLastName" placeholder="Last Name" ng-model="lastName" required>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="text-gray-900">Company Name</label>
                                                    <input class="form-control form-control-user" placeholder="Company Name" ng-model="companyName" required>
                                                </div>
                                                <div class="form-group">
                                                    <label class="text-gray-900">Email</label>
                                                    <input class="form-control form-control-user" placeholder="Email" ng-model="email" required>
                                                </div>
                                                <div class="form-group">
                                                    <label class="text-gray-900">Contact Number</label>
                                                    <input class="form-control form-control-user" id="phone" placeholder="Contact Number" ng-model="contactNo" required>
                                                </div>
                                                <div class="form-group">
                                                    <label class="text-gray-900">Address</label>
                                                    <input class="form-control form-control-user" placeholder="Address" ng-model="address" required>
                                                </div>
                                                <div class="form-group">
                                                    <label class="text-gray-900">Vat Percentage</label>
                                                    <input class="form-control form-control-user" placeholder="VAT (Optional)" ng-model="vat" type="number" min="0" step="0.01">
                                                </div>
                                                <div class="form-group">
                                                    <label class="text-gray-900" for="repeatSelect"> Preferred Currency: </label>
                                                    <select class="form-control form-control-user" name="mySelect" id="mySelect"
                                                      ng-options="option.name for option in currencies track by option.id"
                                                      ng-model="currency">{{option.code}} - {{option.name}}
                                                    </select>
                                                </div>
                                                <div class="form-group mt-5">
                                                    <label class="text-gray-900">Company Logo - For best results, please upload a square shaped image. (Optional)</label>
                                                        <img style="height: 125px; width: 125px;" ng-hide="companyLogo == null" ng-src="{{companyLogo}}">
                                                    <input class="form-control form-control-user mt-3" id="logo" type="file">
                                                </div>
                                            </div>
                                            <div class="mt-4"> <button type="submit" href="" class="btn btn-success btn-user btn-block register-button" ng-click="confirm()"> Confirm </button>  </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts
{
    <script>
        var dashboardUrl = '@Url.Action("Index", "Home")';
    </script>
    <script src="~/js/edit-user.js" asp-append-version="true"></script>
}