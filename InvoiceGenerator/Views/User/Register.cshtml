@{
    ViewData["Title"] = "Register";
}

<body class="">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="register-card">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div>
                            <div>
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h3 text-gray-900">Add Your Details</h1>
                                    </div>
                                    <hr />
                                    <form >
                                        <div class="user" ng-controller="register" ng-init="init()">
                                            <div>
                                                <h1 class="h5 text-gray-900 text-center">Login Details</h1>
                                                <div class="form-group col-sm-6 center">
                                                    <input type="text" class="form-control form-control-user" placeholder="Username" ng-model="userName" required>
                                                </div>
                                                <div class="form-group col-sm-6 center">
                                                    <input type="password" class="form-control form-control-user" placeholder="Password" ng-model="password" required minlength="6">
                                                </div>
                                                <div class="form-group col-sm-6 center">
                                                    <input type="password" class="form-control form-control-user" placeholder="Confirm Password" ng-model="confirmPassword" required minlength="6">
                                                </div>
                                            </div>
                                            <hr class="my-4" />
                                            <div>
                                                <h1 class="h5 text-gray-900 text-center">User Details</h1>
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <input type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="First Name" ng-model="firstName" required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <input type="text" class="form-control form-control-user" id="exampleLastName" placeholder="Last Name" ng-model="lastName" required>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <input class="form-control form-control-user" placeholder="Company Name" ng-model="companyName" required>
                                                </div>
                                                <div class="form-group">
                                                    <input class="form-control form-control-user" placeholder="Email" ng-model="email" required>
                                                </div>
                                                <div class="form-group">
                                                    <input class="form-control form-control-user" id="phone" placeholder="Contact Number" ng-model="contactNo" required>
                                                </div>
                                                <div class="form-group">
                                                    <input class="form-control form-control-user" placeholder="Address" ng-model="address" required>
                                                </div>
                                                <div class="form-group">
                                                    <input class="form-control form-control-user" placeholder="VAT (Optional)" ng-model="vat" type="number" min="0" step="0.01">
                                                </div>
                                                <div class="form-group">
                                                    <label>Company Logo (Optional)</label>
                                                    <input class="form-control form-control-user" name="logo" id="logo" type="file">
                                                </div>
                                            </div>
                                            <div class="mt-4"> <button type="submit" href="" class="btn btn-success btn-user btn-block register-button" ng-click="create()"> Create </button>  </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts
{
    <script>
        var dashboardUrl = '@Url.Action("Index", "Home")';
    </script>
    <script src="~/js/register.js" asp-append-version="true"></script>
}