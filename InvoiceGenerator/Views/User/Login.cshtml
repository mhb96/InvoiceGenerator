@{
    ViewData["Title"] = "Login";
}

<body class="">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="login-card">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div>
                            <div>
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome!</h1>
                                    </div>
                                    <div>
                                        <div class="user" ng-controller="login" ng-init="init()">
                                            <div class="form-group">
                                                <input class="form-control form-control-user" placeholder="Enter Username" ng-model="username">
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control form-control-user" placeholder="Enter Password" ng-model="password">
                                            </div>
                                            <div class="mt-4"> <button type="submit" href="" class="btn btn-primary btn-user btn-block login-button" ng-click="login()"> Login </button>  </div>
                                            <br />
                                            <div class="strikethrough-line"><span class="strikethrough-text">OR</span></div>
                                            <a href="/user/register" class="btn btn-success btn-user btn-block register-button">Create Account</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts
{
    <script src="~/js/login.js" asp-append-version="true"></script>
}